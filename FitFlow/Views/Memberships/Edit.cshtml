@model FitFlow.Models.Entities.Membership

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Membership</h4>
<hr />
<div class="card">
    <div class="card-header">
        <h4>Membership Details</h4>
    </div>
    <div class="card-body">
        <form asp-controller="Memberships" asp-action="Edit" method="post" >
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="MembershipID" />

            <div class="form-group mb-3">
                <label asp-for="PersonID" class="control-label">Person</label>
                <select asp-for="PersonID" class="form-control" disabled>
                    <option value="@Model.PersonID" selected>@ViewBag.PersonName</option>
                </select>
                <input type="hidden" asp-for="PersonID" />
                <span asp-validation-for="PersonID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MembershipType" class="control-label">Membership Type</label>
                <select asp-for="MembershipType" class="form-control">
                    <option value="">-- Select Type --</option>
                    <option value="Monthly">Monthly</option>
                    <option value="Quarterly">Quarterly</option>
                    <option value="Biannual">Biannual</option>
                    <option value="Annual">Annual</option>
                </select>
                <span asp-validation-for="MembershipType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label">Start Date</label>
                <input asp-for="StartDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate" class="control-label">End Date</label>
                <input asp-for="EndDate" class="form-control" type="date" value="@DateTime.Now.AddMonths(1).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Fee" class="control-label">Fee</label>
                <input asp-for="Fee" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="Fee" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary" id="submitBtn">Create Membership</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
